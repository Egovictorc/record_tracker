               <MFXButton onAction="#onSignupButtonClick" text="Signup">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="primary" />
                  </styleClass>
                  <font>
                     <Font size="16.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
