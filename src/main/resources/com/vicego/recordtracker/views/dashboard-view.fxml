                     <Font size="22.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </MFXButton>
               <MFXTextField fx:id="email" floatMode="DISABLED" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="example@example.com" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <font>
                     <Font size="20.0" />
                  </font>
               </MFXTextField>
               <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2">
                  <children>
                     <Label fx:id="currentDate" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Today is: ">
